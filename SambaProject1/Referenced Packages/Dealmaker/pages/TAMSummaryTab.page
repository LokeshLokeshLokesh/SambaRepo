            ];

            var sectionsView = _.template("<% if ( isAvailable === true && isDisplayed === true ) { %>" +
                "   <li class=\"ui-helper-clearfix\">\n" +
                "       <div class=\"wrapper_labelinput ui-helper-clearfix\">\n" +
                "           <div class=\"wrapper_input\">\n" +
